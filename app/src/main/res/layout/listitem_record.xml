<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listitemRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/listitemIconImageView"
            android:layout_width="@dimen/icon_listitem"
            android:layout_height="@dimen/icon_listitem"
            android:layout_margin="@dimen/padding_normal"
            android:background="@drawable/bg_listitem_icon"
            android:padding="@dimen/padding_custom"
            android:scaleType="fitXY"
            android:src="@drawable/book" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="@dimen/padding_listitem_vertical"
            android:paddingTop="@dimen/padding_listitem_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/listitemNameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_listitem_primary" />

                <TextView
                    android:id="@+id/listitemLengthTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_small"
                    android:alpha="0.6"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_listitem_secondary" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/listitemCategoryTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:alpha="0.6"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_listitem_secondary" />

                <TextView
                    android:id="@+id/listitemDateTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_small"
                    android:alpha="0.6"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_listitem_secondary" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/listitemMenuImageView"
            android:layout_width="@dimen/icon_listitem"
            android:layout_height="@dimen/icon_listitem"
            android:layout_margin="@dimen/padding_normal"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="@dimen/padding_custom"
            android:scaleType="fitXY"
            android:src="@drawable/dots" />

    </LinearLayout>

    <TextView
        android:id="@+id/listitemNoteTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_normal"
        android:alpha="0.6"
        android:paddingLeft="@dimen/listitem_note_padding"
        android:paddingRight="72dp"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize_listitem_secondary" />

    <LinearLayout
        android:id="@+id/listitemMediaContainer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/icon_listitem"
        android:layout_marginBottom="@dimen/padding_normal"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/listitem_mediacontainer_paddingleft" />

</LinearLayout>